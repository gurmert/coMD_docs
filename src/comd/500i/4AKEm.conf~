######################################################
## INPUT AND OUTPUT FILES                           ##
######################################################

structure         ../common/ionized.psf
coordinates       ../common/ionized.pdb
set temperature    310 
set outputname     4AKE
set restartname    res

bincoordinates   ../run3/res.coor
binvelocities    ../run3/res.vel
extendedSystem   ../run3/res.xsc



firsttimestep      0
# Input
paraTypeCharmm	    on
parameters          ../common/par_all27_prot_lipid.prm
#We have restart velocities so they are not required
#temperature         $temperature


#############################################################
## SIMULATION PARAMETERS                                   ##
#############################################################

wrapWater           on
wrapAll             on



# Force-Field Parameters
exclude             scaled1-4
1-4scaling          1.0
cutoff              12.
switching           on
switchdist          10.
pairlistdist        13.5


# Integrator Parameters
timestep            1.0  
rigidBonds          none  
nonbondedFreq       1
fullElectFrequency  1  
stepspercycle       5




# PME (for full-system periodic electrostatics)
PME                 yes
PMEGridSizeX        72
PMEGridSizeY        90
PMEGridSizeZ        90


# Constant Temperature Control
langevin            on    
langevinDamping     5     
langevinTemp        $temperature
langevinHydrogen    on    






# Output
outputName          $outputname
restartName         $restartname
outputEnergies      50
outputPressure      50
restartfreq         50   
dcdfreq             50
xstFreq             50


minimize 500
reinitvels          $temperature


